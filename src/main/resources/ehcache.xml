<?xml version="1.0" encoding="UTF-8"?>
<ehcache
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="ehcache.xsd"
	updateCheck="false" monitoring="autodetect"
	dynamicConfig="true">
	
	<!-- Also see /WEB-INF/spring/data.xml -->

	<diskStore path="java.io.tmpdir" />

	<defaultCache maxElementsInMemory="100000"
		eternal="true" timeToIdleSeconds="1200"
		timeToLiveSeconds="1200" overflowToDisk="true"
		diskSpoolBufferSizeMB="1000" maxElementsOnDisk="10000000"
		diskPersistent="false"
		diskExpiryThreadIntervalSeconds="1200"
		memoryStoreEvictionPolicy="LRU" statistics="false" />
</ehcache> 